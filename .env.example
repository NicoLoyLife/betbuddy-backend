# Beispiel für Umgebungsvariablen für das BetBuddy-Backend
# Diese Datei dient als Vorlage. Kopiere sie zu .env und passe die Werte an.
# Niemals sensible Daten ins Repository committen!

# Django Einstellungen
DJANGO_SECRET_KEY=changeme         # Geheimer Schlüssel für Django (unbedingt in Produktion ändern!)
DJANGO_DEBUG=True                  # Debug-Modus (in Produktion auf False setzen)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1   # Kommagetrennte Liste erlaubter Hosts (z.B. für Deployment)
DJANGO_LANGUAGE_CODE=de-de                # Sprache (z. B. de-de, en-us)
DJANGO_TIME_ZONE=Europe/Berlin            # Zeitzone (z. B. Europe/Berlin)
DJANGO_LOG_LEVEL=INFO                      # Log-Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)

# Production-Security-Settings
DJANGO_CSRF_TRUSTED_ORIGINS=   # Kommagetrennte Liste, z. B. https://meine-domain.de,https://www.meine-domain.de
DJANGO_USE_X_FORWARDED_PROTO=False  # True, wenn ein Proxy wie nginx/Traefik SSL terminiert
DJANGO_SESSION_COOKIE_SECURE=False  # True für HTTPS
DJANGO_CSRF_COOKIE_SECURE=False     # True für HTTPS

# Statische und Medien-Dateien
DJANGO_STATIC_URL=/static/
DJANGO_STATIC_ROOT=./staticfiles
DJANGO_MEDIA_URL=/media/
DJANGO_MEDIA_ROOT=./media

# PostgreSQL Datenbank
POSTGRES_DB=betbuddy               # Name der Datenbank
POSTGRES_USER=betbuddy             # Datenbank-Benutzername
POSTGRES_PASSWORD=betbuddy         # Datenbank-Passwort
POSTGRES_HOST=db                   # Hostname des Datenbank-Containers (bei Docker meist 'db')
POSTGRES_PORT=5432                 # Port der Datenbank 